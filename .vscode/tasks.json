{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-17 build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always", 
                "-g", 
                "-Wall", 
                "-std=c++17", // This is the version of C++ you are using to compile
                "${fileDirname}/*.cpp", // This is the folder path the file is in. Here *.cpp is used to compile all the cpp files in the directory
                "-o",
                "a.out" // This is the name of the executable file (a.out), this needs to line up with the path in launch.json
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}